# ESPHome Secrets Configuration Template
# Copy this file to secrets.yaml and fill in your actual values
# NEVER commit secrets.yaml to git!

# WiFi Configuration
wifi_ssid: "YourWiFiSSID"
wifi_password: "YourWiFiPassword"

# API Encryption Key
# Generate with: openssl rand -base64 32
# Or run: esphome wizard dummy.yaml (and copy the key)
api_encryption_key: "REPLACE_WITH_32_BYTE_BASE64_KEY"

# OTA (Over-The-Air) Update Password
# Use a strong, unique password for each device
ota_password: "YourSecureOTAPassword"

# Fallback Access Point Password
# Used when device cannot connect to WiFi
# Minimum 8 characters required
fallback_password: "FallbackAPPassword"
